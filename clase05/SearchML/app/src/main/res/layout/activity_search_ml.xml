<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchML">

    <EditText
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/searchText"
            android:ems="10"
            android:id="@+id/searchText"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/cleanButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/cleanButton"
            android:layout_width="175dp"
            android:layout_height="48dp"
            android:id="@+id/cleanButton" tools:ignore="MissingConstraints"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/searchText"
            app:layout_constraintEnd_toStartOf="@+id/searchButton" android:layout_marginEnd="2dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <Button
            android:text="@string/searchButton"
            android:layout_width="175dp"
            android:layout_height="48dp"
            android:id="@+id/searchButton" tools:ignore="MissingConstraints"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/searchText"
            app:layout_constraintStart_toEndOf="@+id/cleanButton" android:layout_marginStart="2dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
    />
</android.support.constraint.ConstraintLayout>